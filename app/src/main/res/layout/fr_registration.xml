<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/tv_title_style"
        android:text="@string/registration" />

    <EditText
        android:id="@+id/etRegistrationEmail"
        style="@style/et_registration_style"
        android:hint="@string/enter_your_email_or_phone_number"
        android:inputType="text"
        android:text=""
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etRegistrationName"
        style="@style/et_registration_style"
        android:hint="@string/your_name"
        android:inputType="text"
        android:text=""
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etRegistrationCarName"
        style="@style/et_registration_style"
        android:hint="@string/your_car"
        android:inputType="text"
        android:text=""
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etRegistrationPassword"
        style="@style/et_registration_style"
        android:hint="@string/your_password"
        android:inputType="textPassword"
        android:text="" />

    <EditText
        android:id="@+id/etRegistrationPasswordAgain"
        style="@style/et_registration_style"
        android:hint="@string/your_password_again"
        android:inputType="textPassword"
        android:text="" />

    <Button
        android:id="@+id/btnRegistrationSubmit"
        style="@style/button_style"
        android:text="@string/submit" />

</LinearLayout>